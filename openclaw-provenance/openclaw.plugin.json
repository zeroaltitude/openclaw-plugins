{
  "id": "provenance",
  "name": "Content Provenance & Security",
  "version": "0.2.0",
  "description": "Content provenance taint tracking with per-turn DAGs and declarative security policy enforcement for OpenClaw agents.",
  "author": "BigHat Biosciences",
  "main": "dist/index.js",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "taintPolicy": {
        "type": "object",
        "description": "Default policy mode per taint level. Modes: allow, confirm, restrict. Must be monotonically non-decreasing in strictness.",
        "properties": {
          "system": { "type": "string", "enum": ["allow", "confirm", "restrict"], "default": "allow" },
          "owner": { "type": "string", "enum": ["allow", "confirm", "restrict"], "default": "allow" },
          "local": { "type": "string", "enum": ["allow", "confirm", "restrict"], "default": "allow" },
          "shared": { "type": "string", "enum": ["allow", "confirm", "restrict"], "default": "confirm" },
          "external": { "type": "string", "enum": ["allow", "confirm", "restrict"], "default": "confirm" },
          "untrusted": { "type": "string", "enum": ["allow", "confirm", "restrict"], "default": "confirm" }
        }
      },
      "toolOverrides": {
        "type": "object",
        "description": "Per-tool policy overrides. Key = tool name (lowercase). Value = object mapping taint levels (or '*') to modes.",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "system": { "type": "string", "enum": ["allow", "confirm", "restrict"] },
            "owner": { "type": "string", "enum": ["allow", "confirm", "restrict"] },
            "local": { "type": "string", "enum": ["allow", "confirm", "restrict"] },
            "shared": { "type": "string", "enum": ["allow", "confirm", "restrict"] },
            "external": { "type": "string", "enum": ["allow", "confirm", "restrict"] },
            "untrusted": { "type": "string", "enum": ["allow", "confirm", "restrict"] },
            "*": { "type": "string", "enum": ["allow", "confirm", "restrict"] }
          }
        }
      },
      "approvalTtlSeconds": {
        "type": "number",
        "description": "How long an approval code is valid (default: 60)",
        "default": 60
      },
      "maxIterations": {
        "type": "number",
        "description": "Max agent loop iterations before blocking the turn (default: 10)",
        "default": 10
      }
    }
  }
}
